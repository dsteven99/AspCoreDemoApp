@page "{channelId:int}"
@model AspCoreDemoApp.Pages.Videos.AddVideoModel
@{
    ViewData["Title"] = "Add Video";
}

<h4>Add Video</h4>
<form method="post">
    <input type="hidden" asp-for="Video.ChannelId" />
    <div class="form-group">
        <label asp-for="Video.Title">Title</label>
        <input asp-for="Video.Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Video.Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Video.Code">Code</label>
        <input asp-for="Video.Code" class="form-control" />
        <span class="text-danger" asp-validation-for="Video.Code"></span>
    </div>
    <div class="form-group">
        <label asp-for="Video.Width">Width</label>
        <input asp-for="Video.Width" class="form-control" />
        <span class="text-danger" asp-validation-for="Video.Width"></span>
    </div>
    <div class="form-group">
        <label asp-for="Video.Height">Height</label>
        <input asp-for="Video.Height" class="form-control" />
        <span class="text-danger" asp-validation-for="Video.Height"></span>
    </div>
    <div class="form-group">
        <label asp-for="Video.ImageUrl">Image URL</label>
        <input asp-for="Video.ImageUrl" class="form-control" />
        <span class="text-danger" asp-validation-for="Video.ImageUrl"></span>
    </div>
    <button type="submit" class="btn btn-outline-primary">Save</button>
    <a asp-page="Index" class="btn btn-outline-secondary" asp-route-id="@Model.Channel.Id">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
